<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Post title", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Post title", autofocus: true %>
    <%= f.input :body, label: "Post about it", input_html: { class: "textarea " }, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new post...", autofocus: false %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
